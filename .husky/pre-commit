echo -e "\e[36m[Automated]\e[0m Running pre-commit hook"
echo -e "\e[36m[Automated]\e[0m Stylelinting files"
npm run lint
if [ $? -ne 0 ]; then
  echo -e "\e[31m[Automated]\e[0m Stylelinting failed ðŸ’€"
  exit 1
fi

echo -e "\e[36m[Automated]\e[0m Testing files"
npm run test-files
if [ $? -ne 0 ]; then
  echo -e "\e[31m[Automated]\e[0m Testing failed ðŸ’€"
  exit 1
fi
